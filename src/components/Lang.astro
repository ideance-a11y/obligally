---
import { getLangFromUrl } from '@/i18n/utils'

const lang = getLangFromUrl(Astro.url)

const pathWithoutLang = Astro.url.pathname.replace(`/${lang}/`, '')
---

<div class="wrapper-lang">
  {
    lang === 'fr' && (
      <a
        href={`/en/${pathWithoutLang}`}
        lang="en"
        hreflang="en"
      >
        English version
      </a>
    )
  }
  {
    lang === 'en' && (
      <a
        href={`/fr/${pathWithoutLang}`}
        lang="fr"
        hreflang="fr"
      >
        Version fran√ßaise
      </a>
    )
  }
</div>
